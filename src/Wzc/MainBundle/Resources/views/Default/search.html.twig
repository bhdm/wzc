{% extends "WzcMainBundle::layout.html.twig" %}


{% block stylesheets %}
    {{ parent() }}
    <style>
        .content{
            padding: 50px 0 30px 0;
        }
        h2{
            color: #920055;
            font-size: 30px;
            text-transform: uppercase;
        }
    </style>
{% endblock %}
{% block content %}
    <div class="content">
        <h2>Поиск: </h2>
        <br />

        {% if search_1 %}
            <title>Страницы</title>
            {% for s in search_1 %}
                <div class="search-item">
                    <b>s.title</b> <br />
                    s.body
                </div>
            {% endfor %}
        {% endif %}

        {% if search_2 %}
            <title>Вопросы</title>
            {% for s in search_2 %}
                <div class="search-item">
                    <b>s.question</b> <br />
                    s.answer
                </div>
            {% endfor %}
        {% endif %}

        {% if search_3 %}
            <title>Форум</title>
            {% for s in search_3 %}
                <div class="search-item">
                    <b>s.title</b> <br />
                    s.body
                </div>
            {% endfor %}
        {% endif %}

    </div>
{% endblock %}