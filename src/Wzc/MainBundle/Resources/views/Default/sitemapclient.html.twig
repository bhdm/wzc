{% extends "WzcMainBundle::layout.html.twig" %}


{% block stylesheets %}
    {{ parent() }}
    <style>
        .content{
            padding: 50px 0 30px 0;
            max-width: 900px;
            margin: 0 auto;
        }
        h1{
            color: #920055;
            font-size: 30px;
            text-transform: uppercase;
        }
    </style>
{% endblock %}
{% block content %}
    <div class="content">
        <h1>
            КАРТА САЙТА
        </h1>
        <br />
        {% for menu in menus %}
            <br />
            <a href="{{ menu.url }}" style="text-transform: lowercase; color: #920055">{{ menu.title }}</a> <br />
        {% endfor %}
    </div>
{% endblock %}