{% extends "WzcMainBundle::layout.html.twig" %}


{% block header %}
    <title>{{ page.title }}</title>
    <META NAME="Keywords" CONTENT="{{ page.keywords | raw}}">
    <META NAME="Description" CONTENT="{{ page.description  | raw }}">
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .content{
            padding: 50px 0 30px 0;
            width: 900px;
            margin: 0 auto;
        }
        h2{
            color: #920055;
            font-size: 30px;
            text-transform: uppercase;
        }
        input.styler{
            width: 510px
        }
        .thrumb{
            display: inline-block;
            margin-right: 10px;
            padding: 1px;

        }
        .thrumb img{
            width: 200px;
            height: 100px;
            border-radius: 5px;
            opacity: 0.8;
            cursor: pointer;
        }
        .thrumb img:hover{
            opacity: 1;
        }
        .thrumb:hover{
            border: 1px solid #ba6295;
            border-radius: 5px;
            padding: 0;
        }
        .postcard{
            width: 635px;
            height: 300px;
            background: url('/upload/postcard/3.jpg')  no-repeat;
            -moz-background-size: 100%; /* Firefox 3.6+ */
            -webkit-background-size: 100%; /* Safari 3.1+ и Chrome 4.0+ */
            -o-background-size: 100%; /* Opera 9.6+ */
            background-size: 100%; /* Современные браузеры */
            border-radius: 10px;
            position: relative;
        }
        .postcard-title{
            width: 300px;
            height: 40px;
            border-radius: 10px;
            background: #FFFFFF;
            opacity: 0.8;
            position: absolute;
            top: 20px;
            right: 20px;
        }

        .postcard-body{
            width: 500px;
            height: 150px;
            border-radius: 10px;
            background: #FFFFFF;
            opacity: 0.8;
            position: absolute;
            bottom: 20px;
            right: 20px;
        }
        .input-postcard-title{
            opacity: 1;
            background: none;
            outline: none;
            width: 300px;
            height: 40px;
            border-radius: 10px;
            position: absolute;
            top: 20px;
            right: 20px;
            display: block;
            padding: 5px 10px;
            font-size: 18px;
            color: #920055;
        }

        .textarea-postcard-body{
            opacity: 1;
            background: none;
            outline: none;
            width: 500px;
            height: 150px;
            border-radius: 10px;
            position: absolute;
            bottom: 20px;
            right: 20px;
            display: block;
            padding: 5px 10px;
            font-size: 18px;
            color: #920055;
        }
        .input-postcard-title:focus .textarea-postcard-body:focus{
            border: 1px solid #920055;
            border-radius: 10px;
        }
        .column{
            float: left;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}

{% block content %}
    <div class="content">
        <h2>{{ page.title | raw }}</h2>
        <br />
        {{ page.body | raw }}
        <br />
        <div class="column" style="width: 645px">
            {% for pc in postcards %}
            <div class="thrumb" id="img{{ pc.id }}">
                <img src="{{ pc.image.path }}" alt="{{ pc.title }}" title="{{ pc.title }}">
            </div>
            {% endfor %}
            <br />
            <form method="POST">
                <div class="postcard">
                    <div class="postcard-title"></div>
                    <input type="text" class="input-postcard-title">
                    <div class="postcard-body"></div>
                    <textarea class="textarea-postcard-body"></textarea>
                </div>
                <br />
                Email: <input type="text" class="styler" style="width: 260px">
                <button type="submit" class="styler">Отправить</button>
            </form>
        </div>
        {% if page2 != null %}
            <div class="column" style="width: 250px;">
                {{ page2.body | raw }}
            </div>
        {% endif %}
        <br style="clear: both">
    </div>
{% endblock %}