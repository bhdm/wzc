{% extends "WzcMainBundle::layout.html.twig" %}


{% block header %}
    <title>{{ theme.title }}</title>
    {#<META NAME="Keywords" CONTENT="{{ page.keywords | raw}}">#}
    <META NAME="Description" CONTENT="{{ theme.body  | raw }}">
{% endblock %}



{% block content %}
    <div class="content">
        <h2>{{ theme.title  | raw }}</h2>
        <br />
        <div>
            {{ theme.body | raw }}
        </div>
        <br />
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <button class="styler showform"><b>+</b> Добавить вопрос</button>
            <br />
            <div class="form">
                <form method="POST">
                    {{ form_widget(form) }}
                </form>
            </div>
        {% else %}
            <button class="styler in" >Для написание нового вопроса необходимо авторизоваться</button>
        {% endif %}
        <br />
        {% for q in questions %}
            <div class="forum-item">
                <table>
                    <tr>
                        <td class="forum-theme-title"><a href="{{ path('forum_answers',{ 'themeId' : theme.id, 'questionId' : q.id  }) }}" class="title">{{ q.title }}</a></td>
                        <td rowspan="2" class="forum-theme-setting">
                            <b>{{ q.answers | length }}</b> Ответов <br />
                            Последний - <b>22.08.2014</b>
                        </td>
                    </tr>
                    <tr>
                        <td class="forum-theme-body">{{ q.body|length > 200 ? q.body|slice(0, 200)|raw ~ '...' : q.body|raw  }}</td>
                    </tr>
                </table>
            </div>
        {% endfor %}

    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        #cke_wzc_mainbundle_forumquestion_body{
            width: 590px;
        }
        .form{
            display: none;
        }
        .form-group{
            margin: 10px 0;
        }
        .forum-theme-body{
            color: #444444;
            font-size: 14px;
        }
        .forum-theme-title{
            width: 685px;
        }
        .forum-theme-setting{
            color: #444444;
            font-size: 12px;
            font-style: italic;
            width: 200px;
            text-align: right;
        }
        .forum-item table{
            width: 100%;
        }
        .forum-item{
            /*margin: 10px 0;*/
            border-bottom: 1px dotted #920055;
            padding: 10px 20px;
            height: 55px;
        {#background: url('{{ asset('bundles/wzcmain/images/forum_bg.png') }}');#}
        }
        .forum-item:hover{
            background: rgba(186, 98, 149, 0.26);
        }

        .title{
            color: #920055;
            font-size: 20px;
        }
        .title:hover{
            text-decoration: underline;
        }

        .content{
            padding: 50px 0 30px 0;
            width: 900px;
            margin: 0 auto;
        }
        h2{
            color: #920055;
            font-size: 30px;
            text-transform: uppercase;
        }
        input.styler{
            width: 505px;
        }
        .table{
            width: 600px;
            margin: 0 auto ;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/wzcadmin/ckeditor/ckeditor.js') }}"></script>
    <script>
        $(document).ready(function(){
            $('.showform').click(function(){
                $('.form').fadeIn();
            });
            CKEDITOR.replace( 'wzc_mainbundle_forumquestion_body', {
                toolbarGroups : [
                    { name: 'clipboard',   groups: [ 'clipboard', 'undo' ] },
                    { name: 'editing',     groups: [ 'find', 'selection', 'spellchecker' ] },
                    { name: 'links' },
                    { name: 'basicstyles', groups: [ 'basicstyles', 'cleanup' ] },
                    { name: 'colors' }
                    ]
                });
        });
    </script>
{% endblock %}