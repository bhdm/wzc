{% extends "WzcMainBundle::layout.html.twig" %}


{% block header %}
    {% if page != null %}
        <title>{{ page.title }}</title>
        <META NAME="Keywords" CONTENT="{{ page.keywords | raw}}">
        <META NAME="Description" CONTENT="{{ page.description  | raw }}">
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .content{
            padding: 50px 0 30px 0;
            width: 900px;
            margin: 0 auto;
        }
        h2{
            color: #920055;
            font-size: 30px;
            text-transform: uppercase;
        }
        input.styler{
            width: 510px
        }
        .thrumb{
            display: inline-block;
            margin-right: 5px;
            padding: 1px;
            border: 1px solid #FFFFFF;
            overflow: hidden;
            border-radius: 5px;

        }
        .thrumb img{
            width: 200px;
            height: 100px;
            border-radius: 5px;
            opacity: 0.8;
            cursor: pointer;
        }

        .thrumb img:hover{
            opacity: 1;
        }
        .thrumb:hover{
            border: 1px solid #ba6295;
        }
        .postcard{
            width: 660px;
            height: 220px;
            /*background: url('/upload/postcard/3.jpg')  no-repeat;*/
            -moz-background-size: 100%; /* Firefox 3.6+ */
            -webkit-background-size: 100%; /* Safari 3.1+ и Chrome 4.0+ */
            -o-background-size: 100%; /* Opera 9.6+ */
            background-size: 100%; /* Современные браузеры */
            border-radius: 10px;
            position: relative;
        }
        .postcard-title{
            width: 300px;
            height: 40px;
            border-radius: 10px;
            background: #FFFFFF;
            opacity: 0.8;
            position: absolute;
            top: 20px;
            right: 20px;
        }

        .postcard-body{
            width: 500px;
            height: 150px;
            border-radius: 10px;
            background: #FFFFFF;
            opacity: 0.8;
            position: absolute;
            bottom: 20px;
            right: 20px;
        }
        .input-postcard-title{
            opacity: 1;
            background: none;
            outline: none;
            width: 300px;
            height: 40px;
            border-radius: 10px;
            position: absolute;
            top: 20px;
            right: 20px;
            display: block;
            padding: 5px 10px;
            font-size: 18px;
            color: #920055;
        }

        .textarea-postcard-body{
            opacity: 1;
            background: none;
            outline: none;
            width: 500px;
            height: 150px;
            border-radius: 10px;
            position: absolute;
            bottom: 20px;
            right: 20px;
            display: block;
            padding: 5px 10px;
            font-size: 18px;
            color: #920055;
        }
        .input-postcard-title:focus .textarea-postcard-body:focus{
            border: 1px solid #920055;
            border-radius: 10px;
        }
        .column{
            float: left;
        }
        #searchmap::-webkit-input-placeholder, textarea::-webkit-input-placeholder {
            color: #cccccc;
        }
        #searchmap:-moz-placeholder, textarea:-moz-placeholder {
            color: #cccccc;
        }

        input.styler{
            width: 300px;
        }
        .form-group label{
            width: 150px;
        }
        .form-group{
            margin: 10px;
        }
        .form-group img{
            margin-bottom: -16px;
        }
        #form_captcha{
            width: 97px;
        }
        .error-msg{
            color: #CC3333;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $('.img-item').click(function(){
                var originalName = $(this).attr('data-name');
                $('.postcard').css('background', 'url("'+originalName+'")');
                $('#form_img').val($(this).attr('data-id'));
            });

            $('#form_submit').click(function(){
                $('#form_title').val($('.input-postcard-title').val());
            });

            {% if formData != null %}
                $('#form_img').val( {{ formData.img }});
                $('.input-postcard-title').val($('#form_title').val());
                var originalName = $('#img{{ formData.img }}').children('img').attr('data-name');
                $('.postcard').css('background', 'url("'+originalName+'")');
            {% endif %}

        });
    </script>
{% endblock %}

{% block content %}
    <div class="content">
    {% if page != null %}
        <h2>{{ page.title | raw }}</h2>
        <br />
        {{ page.body | raw }}
    {% endif %}
        <br />
        <div class="column" style="width: 680px">
            {% for pc in postcards %}
            <div class="thrumb" id="img{{ pc.id }}">
                <img src="{{ pc.image.path }}" alt="{{ pc.title }}" title="{{ pc.title }}" class="img-item" data-name="{{ pc.image.path }}" data-id="{{ pc.id }}">
            </div>
            {% endfor %}
            <br />
            <form method="POST">
                <div class="postcard">
                    <div class="postcard-title"></div>
                    <input type="text" class="input-postcard-title" name="title" placeholder="Заголовок">
                    {#<div class="postcard-body"></div>#}
                    {#<textarea class="textarea-postcard-body" name="text"></textarea>#}
                </div>
                <br />
                {% if error != false %}
                    <div class="error-msg">{{ error }}</div>
                {% endif %}
                {{ form_widget(form) }}
                {#Email: <input type="text" class="styler" style="width: 260px" name="email">#}
                {#<button type="submit" class="styler">Отправить</button>#}
            </form>
        </div>
        {% if page2 != null %}
            <div class="column" style="width: 210px;">
                {{ page2.body | raw }}
            </div>
        {% endif %}
        <br style="clear: both">
    </div>
{% endblock %}